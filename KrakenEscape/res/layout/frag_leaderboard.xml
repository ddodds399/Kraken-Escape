<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/leaderboard_fragment_leaderboardText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.00" />

    <ImageView
        android:id="@+id/leaderboard_fragment_refreshButton"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.62"
        android:adjustViewBounds="true"
        android:contentDescription="@string/leaderboard_fragment_refreshButton"
        android:src="@drawable/portrefresh" />

</LinearLayout>